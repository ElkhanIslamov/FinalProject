@model RentACar.Areas.Admin.Models.ProfileSubHeaderViewModel

@{
    ViewData["Title"] = "Delete Profile SubHeader";
}

<h2>Delete Profile SubHeader</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this subheader?
</div>

<div>
    <h4>@Model.Title</h4>
    @if (!string.IsNullOrEmpty(Model.BackgroundImage))
    {
        <img src="@Model.BackgroundImage" alt="Background Image" width="250" />
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
