@model IEnumerable<RentACar.DataContext.Entities.AboutPage.DirectorsBoard>

<h2>Directors Board</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Description</th>
            <th>Background Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var board in Model)
        {
            <tr>
                <td>@board.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(board.BackgroundImageUrl))
                    {
                        <img src="~/uploads/team/@board.BackgroundImageUrl" width="120" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@board.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@board.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
