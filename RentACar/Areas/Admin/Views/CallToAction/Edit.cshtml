@model RentACar.Areas.Admin.Models.CallToActionViewModel

<h2>Edit Call To Action</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Başlıq</label>
        <input asp-for="Heading" class="form-control" />
    </div>
    <div class="form-group">
        <label>Telefon</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label>Button Text</label>
        <input asp-for="ButtonText" class="form-control" />
    </div>
    <div class="form-group">
        <label>Button Url</label>
        <input asp-for="ButtonUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Icon</label>
        <input asp-for="Icon" class="form-control" />
    </div>
    <div class="form-group">
        <label>Background Image</label>
        @if (!string.IsNullOrEmpty(Model.BackgroundImage))
        {
            <div>
                <img src="@Model.BackgroundImage" width="120" class="mb-2" />
            </div>
        }
        <input asp-for="BackgroundImageFile" type="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Yenilə</button>
</form>
