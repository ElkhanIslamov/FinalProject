@model IEnumerable<RentACar.DataContext.Entities.AboutPage.CallToAction>

<h2>Call To Action</h2>
<a asp-action="Create" class="btn btn-success mb-3">+ Yeni</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlıq</th>
            <th>Telefon</th>
            <th>Button</th>
            <th>Icon</th>
            <th>Şəkil</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Heading</td>
                <td>@item.Phone</td>
                <td>@item.ButtonText</td>
                <td>@item.Icon</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.BackgroundImage))
                    {
                        <img src="@item.BackgroundImage" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
