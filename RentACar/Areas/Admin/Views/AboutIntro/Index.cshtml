@model IEnumerable<RentACar.DataContext.Entities.AboutPage.AboutIntro>

@{
    ViewData["Title"] = "About Intro";
}

<h2>About Intro</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Create New</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Completed Orders</th>
            <th>Happy Customers</th>
            <th>Vehicles Fleet</th>
            <th>Years Experience</th>
            <th style="width: 160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.CompletedOrdersLabel: @item.CompletedOrdersValue</td>
                <td>@item.HappyCustomersLabel: @item.HappyCustomersValue</td>
                <td>@item.VehiclesFleetLabel: @item.VehiclesFleetValue</td>
                <td>@item.YearsExperienceLabel: @item.YearsExperienceValue</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this item?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
