@model RentACar.Areas.Admin.Models.BookingSubHeaderViewModel

@{
    ViewData["Title"] = "Edit Booking SubHeader";
}

<h2>Edit Booking SubHeader</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="BackgroundImageFile">Change Background Image</label>
        <input asp-for="BackgroundImageFile" type="file" class="form-control" />
        <span asp-validation-for="BackgroundImageFile" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.BackgroundImagePath))
    {
        <div class="mb-2">
            <label>Current Image:</label><br />
            <img src="@Model.BackgroundImagePath" width="200" />
        </div>
    }

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
