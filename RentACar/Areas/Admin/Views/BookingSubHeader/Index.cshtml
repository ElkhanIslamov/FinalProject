@model List<RentACar.Areas.Admin.Models.BookingSubHeaderViewModel>

<h2>Booking SubHeaders</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create New</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Background</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.BackgroundImagePath))
                    {
                        <img src="@item.BackgroundImagePath" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
