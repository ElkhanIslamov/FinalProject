@model RentACar.DataContext.Entities.AboutPage.SubHeader

<h2>Delete SubHeader</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Title:</strong> @Model.Title</p>
    @if (!string.IsNullOrEmpty(Model.BackgroundImage))
    {
        <div>
            <img src="@(Model.BackgroundImage.StartsWith("~/") ? Model.BackgroundImage : "/uploads/subheader/" + Model.BackgroundImage)"
                 width="200" alt="Background Image" />
        </div>
    }

</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
