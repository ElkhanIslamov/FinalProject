@model IEnumerable<RentACar.DataContext.Entities.AboutPage.SubHeader>

<h2>SubHeader List</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Create New</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Background Image</th>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.BackgroundImage))
                    {
                        <img src="~/uploads/subheader/@item.BackgroundImage" width="150" />
                    }
                </td>
                <td>@item.Title</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
