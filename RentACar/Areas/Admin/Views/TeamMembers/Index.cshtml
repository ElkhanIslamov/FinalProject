@model IEnumerable<RentACar.Areas.Admin.Models.TeamMemberVM>

@{
    ViewData["Title"] = "Team Members";
}

<h2>Team Members</h2>
<p>
    <a class="btn btn-success" asp-action="Create">Add New Member</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Full Name</th>
            <th>Position</th>            
            <th>Facebook</th>
            <th>Twitter</th>
            <th>Linkedin</th>
            <th>Pinterest</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@Url.Content("~/uploads/team/" + item.ImageUrl)" width="80" />
                    }
                </td>
                <td>@item.FullName</td>
                <td>@item.Position</td>
                <td>@item.FacebookUrl</td>
                <td>@item.TwitterUrl</td>
                <td>@item.LinkedinUrl</td>
                <td>@item.PinterestUrl</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
