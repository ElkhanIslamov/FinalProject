@model List<RentACar.DataContext.Entities.FavoriteCar>

<h2>Seçilmişlər</h2>

@if (Model.Any())
{
    <div class="row">
        @foreach (var fav in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="@fav.Car.ImageUrl" class="card-img-top" alt="@fav.Car.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@fav.Car.Name</h5>
                        <p class="card-text">@fav.Car.PricePerDay.ToString("0.00") ₼ / gün</p>
                        <form asp-action="Remove" asp-route-carId="@fav.CarId" method="post">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-heart-fill"></i> Sil
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Seçilmiş avtomobil yoxdur.</p>
}
