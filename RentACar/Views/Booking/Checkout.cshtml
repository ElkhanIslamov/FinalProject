@model RentACar.Models.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Checkout</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4 text-center">
                <h4>@Model.CarType</h4>
                <p>Total Price: <strong>@Model.TotalPrice.ToString("0.00") AZN</strong></p>

                <form asp-action="CreateCheckoutSession" method="post">
                    <input type="hidden" name="bookingId" value="@Model.BookingId" />
                    <button type="submit" class="btn btn-primary w-100 py-2">Pay with Card</button>
                </form>
            </div>
        </div>
    </div>
</div>
