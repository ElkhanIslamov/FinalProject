@model RentACar.Models.CheckoutViewModel
<section id="subheader" class="jarallax text-light">
    <img src="~/images/background/subheader.jpg" class="jarallax-img" alt="">
    <div class="center-y relative text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1>Hesablama</h1>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</section>

<div class="container mt-4">
    <h2 class="text-center mb-4">Checkout</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4 text-center">
                <h4>@Model.CarType</h4>
                <p>Ümumi məbləğ: <strong>@Model.TotalPrice.ToString("0.00") AZN</strong></p>

                <form asp-action="CreateCheckoutSession" method="post">
                    <input type="hidden" name="bookingId" value="@Model.BookingId" />
                    <button type="submit" class="btn btn-primary w-100 py-2">Onlayn ödəmə</button>
                </form>
            </div>
        </div>
    </div>
</div>
